# vim: syntax=sh

# Common commands
alias ll='ls -alG'
alias grep='grep --color=auto'

# Shortcut utilities
alias airport='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'
# pyenv-virtualenvwrapper
alias vw='pyenv virtualenvwrapper'

# Python 2.x based aliases
alias pyhttpd='python -m SimpleHTTPServer'
alias pyftpd="python -m pyftpdlib"
alias json="python -mjson.tool"

# Python based alias
alias getsitepackages="python -c 'import site; print(site.getsitepackages())'"

# Temporary aliases
alias touhou="LANG=ja_JP.UTF-8 WINEDEBUG=-all wine"

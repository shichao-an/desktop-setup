# vim: syntax=sh tabstop=4 shiftwidth=4 expandtab softtabstop=4 smarttab

_dbb()
{
    COMPREPLY=();
    local word="${COMP_WORDS[COMP_CWORD]}";
    if [ "$COMP_CWORD" -eq 1 ]
    then
        COMPREPLY=($(compgen -W "$(awk -F '\t' '{ print $1 }' $HOME/.dbb )" -- "$word"));
    fi
}
complete -F _dbb dbb
